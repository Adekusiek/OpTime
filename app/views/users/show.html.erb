<aside class="sidebar">
  <div class="user-info">
    <h3>
      <%= image_for(@user) %>
    </h3>
    <span class="label">Name</span>
    <h3><%= @user.name %></h3>
    <span class="label">City</span>
    <h3><%= @user.city %></h3>
    <span class="label">Interest</span>
    <h3><%= @user.city %></h3>
    <span class="label">About</span>
    <h3><%= @user.about %></h3>
  </div>
  <% if current_user?(@user) %>
    <%= link_to 'Edit', edit_user_path(@user), {class: "btn edit-btn"} %>
  <% end %>
</aside>

<ul class="notes">
  <h2>Feed Line</h2>
  <%= render @events %>
</ul>
